@using Application.Commands.ContractCommands.Update

@model UpdateContractCommand

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UpdateContractViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayFor(model => model.Id)
            </div>
            <div class="form-group">
                <label asp-for="TariffId" class="control-label"></label>
                @Html.DropDownListFor(model => model.TariffId, ViewBag.Tariffs as SelectList)
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                @Html.DropDownListFor(model => model.EmployeeId, ViewBag.Employees as SelectList)
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                @Html.DropDownListFor(model => model.UserId, ViewBag.Users as SelectList)
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
